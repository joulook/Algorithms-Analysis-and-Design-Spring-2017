<Window x:Class="Huffman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Huffman"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="357" ResizeMode="NoResize">
    <Grid Margin="0,0,2,-2">
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="54,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <Label Content="Enter String" HorizontalAlignment="Left" Margin="54,53,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Result" Content="Code :" HorizontalAlignment="Left" Margin="54,186,0,0" VerticalAlignment="Top" Width="190"/>
        <Button Content="Encode" HorizontalAlignment="Left" Margin="54,147,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Decode" HorizontalAlignment="Left" Margin="54,234,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Label x:Name="Result2" Content="Result :" HorizontalAlignment="Left" Margin="54,283,0,0" VerticalAlignment="Top" Width="190"/>
        <Label Content="Huffman Alogithm" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
